{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "../docs-next/pages/localization/MomentLocalization.example.jsx",
    "../docs-next/pages/localization/MomentLocalization.jsx",
    "../docs-next/_shared/SourcablePanel.jsx"
  ]
}
